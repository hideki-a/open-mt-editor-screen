{
    "manifest_version": 2,
    "name": "Open Movable Type Editor Screen",
    "description": "Movable Typeの編集画面を開きます。",
    "version": "1.0",
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ]
    },
    "page_action": {
        "default_icon": "icon/mt.png",
        "default_title": "MT編集画面を開く"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["js/content_script.js"]
        }
    ],
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ]
}