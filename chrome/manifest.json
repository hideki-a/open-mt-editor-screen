{
    "manifest_version": 2,
    "name": "Open Movable Type Editor Screen",
    "description": "Movable Typeの編集画面を開きます。",
    "version": "1.0",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "19": "icon/icon19.png",
            "38": "icon/icon38.png"
        },
        "default_title": "MT編集画面を開く"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["js/content_script.js"]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "storage",
        "https://*/*",
        "http://*/*"
    ],
    // https://developer.chrome.com/extensions/contentSecurityPolicy#relaxing-eval
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}