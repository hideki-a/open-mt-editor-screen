{
    "manifest_version": 2,
    "name": "Open Movable Type Editor Screen",
    "description": "ワンクリックでタブに開いているページのMovable Type編集画面を開きます。",
    "version": "1.2.2.2",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "19": "icon/icon19.png",
            "38": "icon/icon38.png"
        },
        "default_title": "MT編集画面を開く"
    },
    "options_page": "options.html",
    "permissions": [
        "webNavigation",
        "storage",
        "https://*/*",
        "http://*/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}